{
  "manifest_version": 2,

  "name": "Switchr",
  "description": "A chrome extension that allows you to switch tabs by swiping. (using a LEAP device)",
  "version": "1.0",

  "permissions": [
    "tabs",
	"storage"
  ],
  "background": {
    "scripts": ["leap.min.js","background.js"]
  },
  "browser_action": {
    "default_icon": {                    // optional
      "19": "icon19.png"           // optional
    },
    "default_title": "Switchr",      // optional; shown in tooltip
    "default_popup": "popup.html"        // optional
  }
}